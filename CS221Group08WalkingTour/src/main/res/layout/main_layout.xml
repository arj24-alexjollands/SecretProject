<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >


    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:text="@string/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeMessageLabel"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/walkNameLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Walk Name:"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/welcomeMessageLabel"/>

        <EditText
            android:id="@+id/walkNameTextField"
            android:inputType="text"
            android:hint="Enter a Walk Title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/walkNameLabel"/>

        <TextView
            android:id="@+id/walkDescLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Short Description:"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/walkNameLabel"/>

        <EditText
            android:id="@+id/walkShortDescTextField"
            android:inputType="textMultiLine"
            android:hint="Walk Description"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/walkNameTextField"
            android:layout_toRightOf="@+id/walkDescLabel"/>

        <TextView
            android:id="@+id/walkLongDescLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Long Description:"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/walkDescLabel"/>

        <EditText
            android:id="@+id/walkLongDescTextField"
            android:inputType="textMultiLine"
            android:hint="More Details"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/walkShortDescTextField"
            android:layout_toRightOf="@+id/walkLongDescLabel"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make a Walk"
            android:id="@+id/makeWalkButton"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/walkLongDescLabel"/>


    </RelativeLayout>
</FrameLayout>